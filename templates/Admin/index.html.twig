{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}
    <div class="LT_page_name">
        <h2>{{ page_name }}</h2>
    </div>
    <section class="user_table">
        <table class="table_user table-hover" id = "table_user">
            <thead class="thead-light">
                <tr>
                    <th class="th" scope="col">Pr√©nom</th>
                    <th class="th" scope="col">Nom</th>
                    <th class="th" scope="col">Mail</th>
                </tr>
            </thead>
            <tbody class="thead-light">

            {% for user in user %}
                {% if user.roles.0 != 'ROLE_ADMIN' %}
                <tr>
                    <td> {{ user.firstname }} </td>
                    <td> {{ user.lastname }} </td>
                    <td> {{ user.email }} </td>
                </tr>
                {% endif %}
            {% endfor %}

            </tbody>
        </table>
    </section>
{% endblock %}
