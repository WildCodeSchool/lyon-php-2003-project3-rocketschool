{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}
    <div class="LT_page_name {% if is_granted('ROLE_ADMIN') %} margin_top_navbar_admin{% endif %}">
        <h2>{{ page_name }}</h2>
    </div>
    <section class="user_table">
        <table class="table table-hover table_user">
            <thead class="thead-light">
                <tr>
                    <th class="th" scope="col">Pr√©nom</th>
                    <th class="th" scope="col">Nom</th>
                    <th class="th" scope="col">Mail</th>
                </tr>
            </thead>
            <tbody class="thead-light">

            {% for user in users %}
                {% if 'ROLE_ADMIN' not in user.roles %}
                <tr>
                    <td> {{ user.firstname }} </td>
                    <td> {{ user.lastname }} </td>
                    <td> {{ user.email }} </td>
                </tr>
                {% endif %}
            {% endfor %}

            </tbody>
        </table>
    </section>
{% endblock %}