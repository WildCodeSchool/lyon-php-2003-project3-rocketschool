{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}

    <div class="LT_page_name">
        <h2>{{ page_name }}</h2>

    </div>

    <section class="user_table">
        <div class="content-container_lt">

            {{ form_start(form, {
            'attr': {
            'class': 'form-group',
            'novalidate': 'novalidate'
            }}) }}



            {{ form_errors(form.firstname) }}
            {{ form_widget(form.firstname, {

                'attr': {
                    'class': 'form-search',
                    'placeholder': 'Rechercher un candidat'
                } }) }}

            {% if form_errors(form.firstname) %}
                <div class="faq-alert alert-danger">
                    {{ form_errors(form.firstname) }}
                </div>
            {% endif %}


            {{ form_widget(form.program, {
                'attr': {
                    'class': 'form-program',

                }
            }) }}

            {% if form_errors(form.program) %}
                <div class="faq-alert alert-danger">
                    {{ form_errors(form.program) }}
                </div>
            {% endif %}

            <button type="submit" class="btn">Rechercher</button>


        </div>



            {{ form_end(form) }}


        <table class="table table-hover table_user">
            <thead class="thead-light">
                <tr>
                    <th class="th" scope="col">Prénom</th>
                    <th class="th" scope="col">Nom</th>
                    <th class="th" scope="col">Mail</th>
                    <th class="th" scope="col">Programme</th>
                    <th class="th" scope="col">1er essai</th>
                    <th class="th" scope="col">2eme essai</th>
                </tr>
            </thead>
            <tbody class="thead-light">
            {% if users is not empty %}

            {% for user in users %}
                {% if 'ROLE_ADMIN' not in user.roles %}
                <tr>
                    <td> {{ user.firstname }} </td>
                    <td> {{ user.lastname }} </td>
                    <td> {{ user.email }} </td>
                    <td> {{ user.program.name}} </td>

                </tr>
                {% endif %}

            {% endfor %}

            {% endif %}

            {% if users is empty %}

                <tr class="error_search"> Nous n'avons pas pu trouvé de résultats à votre recherche</tr>

            {% endif %}

            </tbody>
        </table>
    </section>
{% endblock %}
