// add-collection-widget.js
jQuery(document).ready(function () {

jQuery('.add-another-collection-widget').click(function (e) {
const list = jQuery(jQuery(this)
.attr('data-list-selector'));
let counter = list.data('widget-counter') || list.children().length;
let newWidget = list.attr('data-prototype');
newWidget = newWidget.replace(/__name__label__/g,'Question ' + counter+1);
newWidget = newWidget.replace(/__name__/g, counter);
counter++;
list.data('widget-counter', counter);

const newElem = jQuery(list.attr('data-widget-tags'))
.html(newWidget);
newElem.appendTo(list);
});
////////////////////////
let $collectionHolder;

// setup an "add a tag" link
const $addTagButton = $('<button type="button" class="btn-quizz">Ajout question</button>');
const $newLinkLi = $('<p></p>').append($addTagButton);


$collectionHolder = $('ul.question');

// add the "add a tag" anchor and li to the tags ul
$collectionHolder.append($newLinkLi);

// count the current form inputs we have (e.g. 2), use that as the new
// index when inserting a new item (e.g. 2)
$collectionHolder.data('index', $collectionHolder.find('input').length);

$addTagButton.on('click', function(e) {
// add a new tag form (see next code block)
addTagForm($collectionHolder, $newLinkLi);


});
function addTagForm($collectionHolder, $newLinkLi) {
// Get the data-prototype explained earlier
const prototype = $collectionHolder.data('prototype');

const index = parseInt($collectionHolder.data('index'));

let newForm = prototype;

newForm = newForm.replace( /__name__label__/g,'reponse ' + (index+1));
newForm = newForm.replace(/__name__/g, index);

$collectionHolder.data('index', index + 1);

const $newFormLi = $('<li></li>')
.append(newForm);
$newLinkLi.before($newFormLi);

addTagFormDeleteLink($newFormLi);


}
function addTagFormDeleteLink($tagFormLi) {
const $removeFormButton = $('<button class="btn-quizz" type="button">Suppr.</button>');
$tagFormLi.append($removeFormButton);

$removeFormButton.on('click', function(e) {
// remove the li for the tag form
$tagFormLi.remove();
});
}

});

