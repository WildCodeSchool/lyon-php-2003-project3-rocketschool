{% extends 'base.html.twig' %}

{% block title %}Question index{% endblock %}

{% block body %}
<div class="quizz-title">
    <h1>Liste des questions</h1>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Questions / solutions</th>

                <th>Date de cr√©ation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td class="question-title">
                    <div>{{ question.title }}</div>
                    <div><em>{{ question.solution }}</em></div>
                </td>

                <td>{{ question.createdAt ? question.createdAt|date('d-M-Y') : '' }}</td>
                <td>
                    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('question_new') }}" class="btn btn-round-darkblue">Ajouter une question</a>
{% endblock %}
