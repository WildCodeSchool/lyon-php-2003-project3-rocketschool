{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}
    <table class="table content-container">
        <thead>
            <tr>
                <th>Questions / solutions </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td class="quizz-edit-row">
                    <div class="d-flex justify-content-start" style="font-size: 1.2em">{{ question.title }}</div>
                    <div class="d-flex justify-content-start"><em>{{ question.solution }}</em></div>
                </td>
                <td>
                    <a href="{{ path('question_show', {'id': question.id}) }}">Voir</a>
                    <a href="{{ path('question_edit', {'id': question.id}) }}">Editer</a>
                    <a href="{{ path('question_delete', {'id': question.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="container-fluid quizz-container" style="margin-bottom: 40px">
        <a href="{{ path('question_new') }}" class="btn quizz-button btn-round-clearblue btn-lg btn-block" type="submit">
            Ajouter une question
        </a>
    </div>

{% endblock %}
