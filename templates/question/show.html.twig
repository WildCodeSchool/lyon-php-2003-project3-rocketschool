{% extends 'base.html.twig' %}

{% block title %}{{ page_name }}{% endblock %}

{% block body %}
    <div class="container-fluid quizz-container" id="quizz_show">
        <div class="quizz-action-btn">
            <a href="{{ path('question_index') }}"><button class="btn btn-round-darkblue">Retour à la liste</button></a>
            {{ include('question/_delete_form.html.twig') }}
        </div>
        <table class=" table content-container quizz-table ">
            <tbody>
                <tr >
                    <th>Question</th>
                    <td class="d-flex justify-content-start quizz-edit-row">{{ question.title }}</td>
                </tr>
                <tr>
                    <th>Solution</th>
                    <td class="d-flex justify-content-start quizz-edit-row">{{ question.solution }}</td>
                </tr>
                {% for proposition in question.propositions %}
                    <tr>
                        <th {% if proposition.isGood %}class="good" {% endif %}>
                            Proposition n° {{ loop.index }}
                        </th>
                        <td class="d-flex justify-content-start quizz-edit-row">{{ proposition.title }}</td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>

        <div class="container-fluid quizz-container" style="margin-bottom: 40px">
            <a href="{{ path('question_edit', {'id': question.id}) }}" class="btn quizz-button btn-round-clearblue btn-lg btn-block" type="submit">
                Modifier cette question
            </a>
        </div>
    </div>


{% endblock %}
