{% extends 'base.html.twig' %}

{% block title %}Faq index{% endblock %}

{% block body %}
    <div class="faq-action-btn">
        <a href="{{ path('faq_new') }}">Create new</a>
    </div>
    <table class="table faq-table sortable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Position</th>
                <th>Catégorie</th>
                <th>Question</th>
                <th>réponse</th>
                <th>Créé le</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr>
                <td>{{ faq.id }}</td>
                <td>
                    <div class="faq-arrow-container">
                        {% if faq.position != 0 %}
                            <a href="{{ path('faq_move', {'id': faq.id, 'position': 'Up'}) }}">
                                <img src="{{ asset('build/images/multimedia-option.png') }}"
                                     class="faq-position-btn faq-up-btn"
                                     alt="Monter dans la file">
                            </a>
                        {% endif %}
                        {% if faq.position != faqs|length - 1 %}
                            <a href="{{ path('faq_move', {'id': faq.id, 'position': 'Down'}) }}">
                                <img src="{{ asset('build/images/multimedia-option.png') }}"
                                     class="faq-position-btn faq-down-btn"
                                     alt="Descendre dans la file">
                            </a>
                        {% endif %}
                    </div>
                </td>
                <td>{{ faq.category.name|default('Sans catégorie') }}</td>
                <td>{{ faq.question }}</td>
                <td>{{ faq.answer }}</td>
                <td>{{ faq.createdAt ? faq.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('faq_show', {'id': faq.id}) }}">show</a>
                    <a href="{{ path('faq_edit', {'id': faq.id}) }}">edit</a>
                    <a href="{{ path('faq_delete', {'id': faq.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

