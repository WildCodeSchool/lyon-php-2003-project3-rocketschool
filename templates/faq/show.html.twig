{% extends 'base.html.twig' %}

{% block title %}FAQ - Question{% endblock %}

{% block body %}
    <div class="faq-action-btn">
        <a href="{{ path('faq_index') }}"><button class="btn btn-round-darkblue">Retour</button></a>
        {{ include('faq/_delete_form.html.twig') }}
    </div>

    <div class="faq-card">
        <div class="icone-btn-container">
            <a href="{{ path('faq_edit', {'id': faq.id}) }}" class="icone-btn-container">
                <img src="{{ asset('build/images/edit.png') }}" class="icone-btn icone-btn-edit" alt="Editer">
            </a>
        </div>
        <h3>{{ faq.question }}</h3>
        <div class="faq-answer-container">
            <p>{{ faq.answer }}</p>
            <div class="faq-img-container">
                {% if faq.image %}
                    <img src="{{ asset('uploads/faq/' ~ faq.image) }}" class="faq-image" alt="image pour la question {{ faq.question }}">
                {% endif %}
            </div>
        </div>
    </div>
    <div class="faq-created-at">
        <small>
            créé le {{ faq.createdAt ? faq.createdAt|date('Y-m-d') : '' }}
            à {{ faq.createdAt ? faq.createdAt|date('H:i') : '' }}
        </small>
    </div>
{% endblock %}
